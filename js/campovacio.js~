function validar9(formulario9){ 
    var bOk = false;  
	/******************Campos Vacios ********************/
	 var cod_i = document.getElementById("cod_i").selectedIndex;
	 cod_r = document.getElementById("cod_r").selectedIndex;
	 fecha_solicitud = document.getElementById("fecha_solicitud").value;
	 cantidad= document.getElementById("cantidad").value; 
	 status= document.getElementById("status").value; 
	 
if( cod_i == null || cod_i == 0  ) {
 alert('Agregue un producto');
 document.getElementById("cod_i").focus();
  return false;
}
 /******************COMPRUEBA la cod_r********************/
else if( cod_r == null || cod_r == 0  ) {
 alert('Agregue un Laboratorio receptor');
 document.getElementById("cod_r").focus();
  return false;
}
/******************COMPRUEBA la fecha_solicitud********************/
else if( fecha_solicitud == null || fecha_solicitud.length == 0 || /^\s+$/.test(fecha_solicitud) ) {
 alert('Agregue una fecha de solicitud');
 document.getElementById("fecha_solicitud").focus();
  return false;
} /******************COMPRUEBA el cantidad********************/
else if( cantidad == null || cantidad.length == 0 || /^\s+$/.test(cantidad) ) {
 alert('Debe ingresar una cantidad');
 document.getElementById("cantidad").focus();
  return false;
} 
/******************COMPRUEBA la fecha_solicitud********************/
else if( status == null || status.length == 0 || /^\s+$/.test(status) ) {
 alert('Agregue un status');
 document.getElementById("status").focus();
  return false;
}
}


