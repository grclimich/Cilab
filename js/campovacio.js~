function validar20(formulario3){
    var bOk = false;  
	/******************Campos Vacios ********************/
	 nombre_2 = document.getElementById("nombre_2").value;
	 direccion = document.getElementById("direccion").value;
	 municipio = document.getElementById("municipio").selectedIndex;
	 telefono = document.getElementById("telefono").value;  	 
 /******************COMPRUEBA el nombre********************/
if( nombre_2 == null || nombre_2.length == 0 || /^\s+$/.test(nombre_2) ) {
 alert('Debe ingresar un nombre de Laboratorio');
 document.getElementById("nombre_2").focus();
  return false;
} /******************COMPRUEBA tipo de producto********************/
else if( direccion == null || direccion.length == 0 || /^\s+$/.test(direccion) ) {
 alert('Debe ingresar una Direccion');
 document.getElementById("direccion").focus();
  return false;
}/******************COMPRUEBA tipo de producto********************/
else if( municipio == null || municipio == 0  ) {
 alert('Debe ingresar un municipio');
 document.getElementById("municipio").focus();
  return false;
} /******************COMPRUEBA el telefono********************/
else if( telefono == null || telefono.length == 0 || /^\s+$/.test(telefono) ) {
 alert('Debe ingresar un Telefono');
 document.getElementById("telefono").focus();
  return false;
}
}
