function validar11(formulario2){ 
    var bOk = false;  
	/******************Campos Vacios ********************/
	fecha_s= document.getElementById("fecha_s").value; 
	observaciones= document.getElementById("observaciones").value; 
	var lote = document.getElementById("lote").value;
	var cod_i = document.getElementById("cod_i").selectedIndex;
	cantidad_salida= document.getElementById("cantidad_salida").value; 

 /******************COMPRUEBA la accion_de_salida********************/
if( fecha_s == null || fecha_s.length == 0 || /^\s+$/.test(fecha_s) ) {
 alert('Agregue una fecha de salida');
 document.getElementById("fecha_s").focus();
  return false;
}
/******************COMPRUEBA la fecha_solicitud********************/
else if( observaciones == null || observaciones.length == 0 || /^\s+$/.test(observaciones) ) {
 alert('Agregue una observacion');
 document.getElementById("observaciones").focus();
 return false;
}
/******************COMPRUEBA EL LOTE********************/
else if( lote == null || lote.length == 0 || /^\s+$/.test(lote) ) {
 alert('Agregue un lote');
 document.getElementById("lote").focus();
 return false;
}	 
else if( cod_i == null || cod_i == 0  ) {
 alert('Agregue un producto');
 document.getElementById("cod_i").focus();
  return false;
}
 /******************COMPRUEBA el cantidad********************/
else if( cantidad_salida == null || cantidad_salida.length == 0 || /^\s+$/.test(cantidad_salida) ) {
 alert('Debe ingresar una cantidad de salida');
 document.getElementById("cantidad_salida").focus();
  return false;
} 
}
