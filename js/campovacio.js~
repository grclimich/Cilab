function validar1(formulario){ 
    var bOk = false;  
	/******************Campos Vacios ********************/
	 cod_i = document.getElementById("cod_i").value;
	 descripcion = document.getElementById("descripcion").value;
	 tipo_p = document.getElementById("tipo_p").selectedIndex;
	 var presentacion = document.formulario.presentacion.value;
	 almacen= document.getElementById("almacen").value; 
	 
if( cod_i == null || cod_i.length == 0 || /^\s+$/.test(cod_i) ) {
 alert('Debe llenar todos los campos');
 document.getElementById("cod_i").focus();
  return false;
}
 /******************COMPRUEBA la descripcion********************/
else if( descripcion == null || descripcion.length == 0 || /^\s+$/.test(descripcion) ) {
 alert('Debe ingresar una Descripcion');
 document.getElementById("descripcion").focus();
  return false;
}/******************COMPRUEBA tipo de producto********************/
else if( tipo_p == null || tipo_p == 0  ) {
 alert('Debe ingresar un Tipo de Producto');
 document.getElementById("tipo_p").focus();
  return false;

}/******************COMPRUEBA la presentacion********************/
else if( presentacion == null || presentacion==0 || presentacion.length == 0 || /^\s+$/.test(presentacion) ) {
 alert('Debe ingresar una Presentacion');
 document.getElementById("presentacion").focus();
  return false;
} /******************COMPRUEBA el almacen********************/
else if( almacen == null || almacen.length == 0 || /^\s+$/.test(almacen) ) {
 alert('Debe ingresar un Almacen');
 document.getElementById("almacen").focus();
  return false;
} 
}
